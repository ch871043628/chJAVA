<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="default" namespace="/" extends="struts-default">
        <action name="comaction" class="componentTypeAction" method="findAll">
        	<result name="success">/add.jsp</result>
        </action>
        
         <action name="addAction" class="componentAction" method="addComponent">
        	<result name="success">/index.jsp</result>
        </action>
        
        <action name="all" class="componentAction" method="findAll">
        	<result name="success">/components.jsp</result>
        </action>
        
        <action name="findAllpage" class="componentAction" method="findAllpage">
        	<result name="success">/components.jsp</result>
        </action>
        
        <action name="findAllcomputer" class="computerAction" method="findAll">
        	<result name="success">/findcomputer.jsp</result>
        </action>
        
        <action name="addcomputeraction" class="computerAction" method="addComputer">
        	<result name="success">/index.jsp</result>
        </action>
    </package>
</struts>
